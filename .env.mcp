# MCP General Configuration
MCP_ENABLED=true
MCP_LOG_LEVEL=info
MCP_ENVIRONMENT=development

# Supabase MCP Server
SUPABASE_SERVICE_KEY=REPLACE_WITH_YOUR_SUPABASE_SERVICE_KEY
SUPABASE_MCP_ENABLED=true

# Vercel MCP Server  
VERCEL_API_TOKEN=REPLACE_WITH_YOUR_VERCEL_TOKEN
VERCEL_TEAM_ID=REPLACE_WITH_YOUR_VERCEL_TEAM_ID
VERCEL_MCP_ENABLED=true

# GitHub MCP Server
GITHUB_TOKEN=REPLACE_WITH_YOUR_GITHUB_TOKEN
GITHUB_OWNER=bradjohnson79
GITHUB_REPO=anointarray
GITHUB_MCP_ENABLED=true

# Stripe MCP Server
STRIPE_MCP_ENABLED=true
# Note: STRIPE_SECRET_KEY is already in your .env.local

# Redis/Upstash MCP Server
UPSTASH_REDIS_URL=REPLACE_WITH_YOUR_UPSTASH_REDIS_URL
UPSTASH_REDIS_TOKEN=REPLACE_WITH_YOUR_UPSTASH_REDIS_TOKEN
REDIS_MCP_ENABLED=true

# Cloudflare MCP Server
CLOUDFLARE_API_TOKEN=REPLACE_WITH_YOUR_CLOUDFLARE_TOKEN
CLOUDFLARE_ZONE_ID=REPLACE_WITH_YOUR_CLOUDFLARE_ZONE_ID
CLOUDFLARE_MCP_ENABLED=true

# Monitoring MCP Server (Sentry)
SENTRY_AUTH_TOKEN=REPLACE_WITH_YOUR_SENTRY_TOKEN
SENTRY_ORG=REPLACE_WITH_YOUR_SENTRY_ORG
SENTRY_PROJECT=REPLACE_WITH_YOUR_SENTRY_PROJECT
MONITORING_MCP_ENABLED=true

# Serena Build Management
SERENA_MCP_ENABLED=true
SERENA_BUILD_PARALLELISM=4
SERENA_AUTO_OPTIMIZE=true
SERENA_ERROR_RECOVERY=true

# Security Settings
MCP_REQUIRE_AUTH=true
MCP_RATE_LIMIT_ENABLED=true
MCP_CORS_ORIGINS=http://localhost:3000,https://anointarray.com

# Feature Flags
MCP_AUTO_DEPLOYMENT=true
MCP_PARALLEL_PROCESSING=true
MCP_AI_ASSISTANCE=true
MCP_PERFORMANCE_MONITORING=true